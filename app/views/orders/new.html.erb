<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

<script>
  $(function() {
    $("#order_reciverdate").datepicker({ dateFormat: 'yy-mm-dd' });
  });
</script>


<div class="page-header">
  <h2>Checkout cart <a href="/products" class="btn btn-primary" style="float:right">Continue shopping</a></h2>

</div>

<%= form_for :order, url: orders_path do |f|%>
	<div class="form-group">
		<label>Fullname</label>
		<input readonly="true" type="text" name="order_fullname" id="order_fullname" class="form-control" placeholder="Enter you fullname" value='<%=current_user.fullname%>' />
	</div>

	<div class="form-group">
		<label>ReciverDate</label>
		<%=f.text_field :reciverdate ,:class=>'form-control', :placeholder=>'Enter reciver date', :required=>true%>
	</div>

	<div class="form-group">
		<label>Reciver Email</label>
		<%=f.text_field :email, :class=>'form-control', :placeholder=>'Enter you Reciver Email', :value=>current_user.email %>
	</div>

	<div class="form-group">
		<label>Reciver Phone</label>
		<%=f.text_field :phone, :class=>'form-control', :placeholder=>'Enter you Reciver Email', :value=>current_user.phone %>
	</div>

	

	<div class="form-group">
		<label>Reciver Address</label>
		<%=f.text_field :reciveraddress, :class=>'form-control', :placeholder=>'Enter you Reciver Address', :value=>current_user.address %>
	</div>

	<div class="form-group">
		<label>Total payment</label>
		<% 
			tongtien = 0  
			session["cart"].each do |x| 
		%>
		<% tongtien = tongtien + x['total'] %>
		<%end%>
		<div class="input-group">
        <div class="input-group-addon">$</div>
        	<%=f.text_field :total, :class=>'form-control', :placeholder=>'Enter you product price', :value=>tongtien, :readonly=>true %>

      </div>
	</div>	

	<div class="button-submit form-group">
  		<%=f.submit 'Checkout', :class=>'btn btn-primary' %>
      <button type="reset" class="btn btn-danger">Reset</button>
  	</div>

<%end%>






